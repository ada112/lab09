<div class="container">

  <div class="jumbotron">
    <h1 class="text-center"><span class="fa fa-fire"></span> Hot Restaurant</h1>
    <hr>
    <h2 class="text-center">Current Reservations and Waiting List</h2>
    <br>

    <div class="text-center">
      <a href="/reserve"><button class="btn btn-lg btn-danger"><span class="fa fa-credit-card"></span> Make
          Reservation</button></a>
      <a href="/"><button class="btn btn-lg btn-default"><span class="fa fa-home"></span></button></a>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">

      <!-- Current Tables in Use -->
      <div class="card">
        <div class="card-header">
          <h4>Current Reservations</h4>
        </div>
        <div class="card-body">
          <ul id="tableList" class="list-group">
            {{#each tableArray as |reservado|}}
            <li class='list-group-item mt-4'>
              <h2>Table {{math @key "+" 1}}:</h2>
              <hr>
              <h2>ID: {{reservado.customerID}}</h2>
              <h2>Name: {{reservado.customerName}}</h2>
              <h2>Email: {{reservado.customerEmail}}</h2>
              <h2>Phone: {{reservado.phoneNumber}}</h2>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>

      <!-- Waiting List Card -->
      <div class="card mt-4">
        <div class="card-header">
          <h4>Waiting List</h4>
        </div>
        <div class="card-body">
          <ul id="waitList" class="list-group">
            {{#each waitingArray as |reserv|}}
            <li class='list-group-item mt-4'>
              <h2>Table {{math @key "+" 1}}:</h2>
              <hr>
              <h2>ID: {{reserv.customerID}}</h2>
              <h2>Name: {{reserv.customerName}}</h2>
              <h2>Email: {{reserv.customerEmail}}</h2>
              <h2>Phone: {{reserv.phoneNumber}}</h2>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>


  <footer class="footer mt-4">
    <div class="container">
      <p>Control Panel</p>
      <p><a href="#" id="clear">Clear Table</a> | <a href="/api/tables">API Table Link</a> | <a href="/api/waitlist">API
          Wait List</a>
    </div>
  </footer>

</div>
